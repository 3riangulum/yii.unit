{
  "name": "3riangulum/yii-unit",
  "type": "library",
  "description": "Yii2 units",
  "keywords": [
    "Yii2",
    "Components"
  ],
  "homepage": "https://github.com/3riangulum/yii.unit",
  "license": "MIT",
  "authors": [
    {
      "name": "RD",
      "email": "3riangulum@ro.ru",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "antic-droid/yii2-sortable-grid-view-widget": "dev-master",
    "bookin/yii2-awesome-bootstrap-checkbox": "dev-master",
    "kartik-v/yii2-widget-datepicker": "^1.4@dev",
    "kartik-v/yii2-widget-datetimepicker": "^1.4@dev",
    "kartik-v/yii2-widget-growl": "1.1.2.*",
    "kartik-v/yii2-widget-select2": "^2.2",
    "kartik-v/yii2-widget-switchinput": "^1.3",
    "nesbot/carbon": "^2.51",
    "ramsey/uuid": "^4.0@dev",
    "rmrevin/yii2-fontawesome": "*",
    "webmozart/assert": "1.10.x-dev",
    "yiisoft/yii2": "~2.0.4",
    "yiisoft/yii2-bootstrap": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Triangulum\\Yii\\Unit\\": "src/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "fxp-asset": {
    "enabled": false
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "scripts": {
    "phpcs": "phpcs --standard=PSR12"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.2"
  }
}
